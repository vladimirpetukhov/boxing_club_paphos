<div class="container col-md-4 offset-md-4 col-12 mt-5">
    <form id="register-form" action="/user/register" method="POST">
        <div class=" m-0">
            <div class="col-12 mb-2">
                <label for="username">Username:</label>
                <input class="input-field form-control" type="text" id="username" name="username"
                    value="{{username}}" />
            </div>
            <div class="col-12 mb-2">
                <label for="password">Password:</label>
                <input class="input-field form-control" type="password" id="password" name="password" />
            </div>
            <div class="col-12 mb-2">
                <label for="confirmedPassword">Repeat Password:</label>
                <input class="input-field form-control" type="password" id="confirmedPassword" name="repeatPassword" />
            </div>
            <div class="col-12 mb-2">
                <label for="firstName">First Name:</label>
                <input class="input-field form-control" type="text" id="firstName" name="firstName" />
            </div>
            <div class="col-12 mb-2">
                <label for="lastName">Last Name:</label>
                <input class="input-field form-control" type="text" id="lastName" name="lastName" />
            </div>
            <div class="col-12 mb-2">
                <label for="email">Email:</label>
                <input class="input-field form-control" type="email" id="email" name="lastName" />
            </div>
            <div class="col-12 text-center">
                <input class="btn btn-success" type="submit" value="Register" />
                <input class="btn btn-info" type="reset" value="Reset" />
            </div>
        </div>
    </form>
</div>